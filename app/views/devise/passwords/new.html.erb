<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <br> </br>
  <br> </br>
  <br> </br>
  <br> </br>

  <div class="card bg-dark">
    <div class="card-body">

      <h2 class="card-title text-center mb-4 text-white">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group text-white">
          <%= f.label :email, class: "font-weight-bold" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <br>

        <div class="form-group text-center">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>

</div>
  </div>
</div>



